{
  "manifest_version": 3,
  "name": "My extension",
  "version": "0.0.1",
  "description": "TODO",
  "icons": {
    "48": "icons/beasts-48.png"
  },
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_icon": "icons/beasts-48.png",
    "default_title": "Beastify",
    "default_popup": "popup/choose_beast.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "tree-sitter.wasm",
        "tree-sitter-*.wasm"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_scripts/index.js"
      ]
    }
  ]
}
