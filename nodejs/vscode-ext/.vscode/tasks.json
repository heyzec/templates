// See https://code.visualstudio.com/docs/debugtest/tasks
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Pre Run Extension",
      "dependsOn": ["Build", "Watch"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "npm run build",
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    },
    {
      "label": "Watch",
      "type": "shell",
      "command": "npm run watch",
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^$",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "webpack .* compiled successfully in \\d+ ms"
        }
      }
    }
  ]
}
